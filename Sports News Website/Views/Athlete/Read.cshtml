@using DataStructure;
@using Sports_News_Website.DTOs
@model IEnumerable<Athletes>

@{
    ViewBag.Title = "Athletes";
}

<h2>Athletes</h2>
@if (SessionDTO.IsAdmin == true)
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { Style = "color:white" })
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sport)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sport.Name)
            </td>
            @if (SessionDTO.IsAdmin == true)
            {
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.ID }, new { style = "color:white" } ) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { style = "color:white" } )
                </td>
            }
        </tr>
    }

</table>
