<!DOCTYPE html>
<html>
<head>
    @using Sports_News_Website.DTOs
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body background="~/Photo/Sports-Wallpapers.jpg" style="color: white">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sports News Website", "Read", "News", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("News", "Read", "News")</li>
                    <li>@Html.ActionLink("Sports", "Read", "Sport")</li>
                    <li>@Html.ActionLink("Athletes", "Read", "Athlete")</li>
                    <li>@Html.ActionLink("Users", "Read", "Users")</li>
                    @if (SessionDTO.ID == 0)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Users")</li>
                        <li>@Html.ActionLink("Register", "Register", "Users")</li>
                    }
                    @if (SessionDTO.ID != 0)
                    {
                        <li>Hello, @SessionDTO.Username, @SessionDTO.ID, You have Admin privileges : @SessionDTO.IsAdmin</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
