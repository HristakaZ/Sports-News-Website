@model IEnumerable<DataStructure.Users>
@using Sports_News_Website.DTOs;
@using DataAccess.Repositories;
@using DataStructure;

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        @if (SessionDTO.IsAdmin == true)
        {
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
        }
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            @if (SessionDTO.IsAdmin == true)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            @if (SessionDTO.ID == item.ID && SessionDTO.IsAdmin == false)
            {
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            }

            else if (SessionDTO.IsAdmin == true)
            {
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            }
        </tr>
    }

</table>
